<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/d_margin_40"
            android:background="@color/c_white" >

            <RelativeLayout
                android:id="@+id/rl_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_margin_12"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/p_margin_10"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/tv_forget_pswd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Change Password"
                    android:textColor="@color/c_forgot_pswd_heading_3a3a3a"
                    android:textSize="@dimen/s_text_20" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_margin_120"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_margin_30"
                    android:layout_marginRight="@dimen/d_margin_30"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/password" />

                    <EditText
                        android:id="@+id/et_old_pswd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Old Password"
                        android:padding="@dimen/p_margin_10"
                        android:singleLine="true"
                        android:textColor="@color/c_login_text_color_3b3b3b"
                        android:textSize="@dimen/s_text_20" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_margin_1_view"
                    android:layout_marginLeft="@dimen/d_margin_30"
                    android:layout_marginRight="@dimen/d_margin_30"
                    android:background="@color/c_login_text_color_3b3b3b" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_margin_30"
                    android:layout_marginRight="@dimen/d_margin_30"
                    android:layout_marginTop="@dimen/d_margin_5"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/password" />

                    <EditText
                        android:id="@+id/et_new_pswd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/text_new_password"
                        android:inputType="textPassword"
                        android:padding="@dimen/p_margin_10"
                        android:singleLine="true"
                        android:textColor="@color/c_login_text_color_3b3b3b"
                        android:textSize="@dimen/s_text_20" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_margin_1_view"
                    android:layout_marginLeft="@dimen/d_margin_30"
                    android:layout_marginRight="@dimen/d_margin_30"
                    android:background="@color/c_login_text_color_3b3b3b" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_margin_30"
                    android:layout_marginRight="@dimen/d_margin_30"
                    android:layout_marginTop="@dimen/d_margin_5"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/password" />

                    <EditText
                        android:id="@+id/et_confirm_pswd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/text_confirm_password"
                        android:inputType="textPassword"
                        android:padding="@dimen/p_margin_10"
                        android:singleLine="true"
                        android:textColor="@color/c_login_text_color_3b3b3b"
                        android:textSize="@dimen/s_text_20" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_margin_1_view"
                    android:layout_marginLeft="@dimen/d_margin_30"
                    android:layout_marginRight="@dimen/d_margin_30"
                    android:background="@color/c_login_text_color_3b3b3b" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_view1"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/d_margin_30"
                android:layout_marginRight="@dimen/d_margin_30"
                android:layout_marginTop="@dimen/d_margin_50"
                android:background="@drawable/xml_button_backgroung_login_green"
                android:text="Save Changes"
                android:textColor="@color/c_white"
                android:textSize="@dimen/s_text_20"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>