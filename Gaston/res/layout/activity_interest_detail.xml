<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_home_screen_background_grey_d8dbdb" >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_login_button_green_0a6f1f" >

        <TextView
            android:id="@+id/tv_interest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLength="8"
            android:padding="@dimen/p_margin_10"
            android:text=""
            android:textColor="@color/c_white"
            android:textSize="@dimen/s_text_20" />

        <TextView
            android:id="@+id/tv_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/p_margin_10"
            android:background="@drawable/xml_report_background_layout"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="Report"
            android:textColor="@color/c_white" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_interest_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
        android:background="@color/c_white" >

        <LinearLayout
            android:id="@+id/ll_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_margin_3"
            android:orientation="horizontal"
            android:padding="@dimen/d_margin_3"
            android:visibility="gone" >

            <com.in.gaston.view.RoundImageViewGray
                android:id="@+id/img_user1"
                android:layout_width="@dimen/d_margin_35"
                android:layout_height="@dimen/d_margin_35"
                android:padding="@dimen/d_margin_5"
                android:src="@drawable/profileiconsmall" />

            <TextView
                android:id="@+id/tv_user_name1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/d_margin_3"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/c_black"
                android:textSize="@dimen/s_text_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_subscribe_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_subscribe"
            android:paddingBottom="@dimen/p_margin_10"
            android:paddingTop="@dimen/p_margin_10"
            android:text=""
            android:textColor="@color/c_black"
            android:textSize="@dimen/s_text_12" />

        <TextView
            android:id="@+id/tv_subscribe_count1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_subscribe"
            android:paddingBottom="@dimen/p_margin_10"
            android:paddingTop="@dimen/p_margin_10"
            android:text=""
            android:textColor="@color/c_black"
            android:textSize="@dimen/s_text_12"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/p_margin_10"
            android:background="@drawable/xml_green_button_subscribe"
            android:paddingBottom="@dimen/p_margin_2"
            android:paddingLeft="@dimen/p_margin_5"
            android:paddingRight="@dimen/p_margin_5"
            android:paddingTop="@dimen/p_margin_2"
            android:text=""
            android:textColor="@color/c_white"
            android:textSize="@dimen/s_text_12" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_interest_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_interest_image"
        android:layout_marginLeft="@dimen/p_margin_10"
        android:layout_marginRight="@dimen/p_margin_10"
        android:layout_marginTop="@dimen/p_margin_10"
        android:background="@color/c_white"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_intrst_created_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="38dp"
            android:text=""
            android:textColor="@color/c_black"
            android:textSize="@dimen/s_text_12" />

        <LinearLayout
            android:id="@+id/ll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.in.gaston.view.RoundImageViewGray
                android:id="@+id/img_user"
                android:layout_width="@dimen/d_margin_35"
                android:layout_height="@dimen/d_margin_35"
                android:padding="@dimen/d_margin_5"
                android:src="@drawable/profileiconsmall" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/d_margin_3"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/c_black"
                android:textSize="@dimen/s_text_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_intrst_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="2dp"
            android:maxLines="3"
            android:text=""
            android:textColor="@color/c_black"
            android:textSize="@dimen/s_text_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_interest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_comment_type"
        android:layout_below="@+id/rl_interest_detail"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/p_margin_10"
        android:layout_marginRight="@dimen/p_margin_10"
        android:layout_marginTop="@dimen/p_margin_15"
        android:background="@drawable/xml_interest_detail_layout_backgroung_grey"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/text_message"
            android:textColor="@color/c_black"
            android:textSize="@dimen/s_text_15" />

        <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipe_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginTop="@dimen/d_margin_3" >

            <ListView
                android:id="@+id/ll_interest"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="@dimen/d_margin_8"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scrollbars="none" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_comment_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/c_login_button_green_0a6f1f"
        android:gravity="center"
        android:padding="@dimen/d_margin_5"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/img_text"
            android:layout_width="@dimen/d_margin_25"
            android:layout_height="@dimen/d_margin_25"
            android:padding="@dimen/d_margin_3"
            android:src="@drawable/textmessage" />

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="@dimen/d_margin_25"
            android:layout_height="@dimen/d_margin_25"
            android:layout_marginLeft="@dimen/d_margin_40"
            android:layout_marginRight="@dimen/d_margin_40"
            android:padding="@dimen/d_margin_3"
            android:src="@drawable/picture" />

        <ImageView
            android:id="@+id/img_aud"
            android:layout_width="@dimen/d_margin_25"
            android:layout_height="@dimen/d_margin_25"
            android:padding="@dimen/d_margin_3"
            android:src="@drawable/sound_1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/c_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1" >

        <EditText
            android:id="@+id/et_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="Enter your text"
            android:inputType="textMultiLine"
            android:lines="3"
            android:cursorVisible="true"
            android:textColor="@color/c_black"
            android:textColorHint="@color/c_black"
            android:textSize="@dimen/s_text_15" ></EditText>

        <ImageView
            android:id="@+id/img_send_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/enter_text" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/img_intrst_ima1ge"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@drawable/xml_oval"
        android:padding="@dimen/p_margin_2" >

        <com.in.gaston.view.RoundedImageView
            android:id="@+id/img_intrst_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/profilepic_bg" />
    </RelativeLayout>

    <!--
         <com.in.gaston.view.RoundedImageView
        android:id="@+id/img_intrst_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:padding="30dp"
        android:src="@drawable/profilepic_bg" />
    -->

    <LinearLayout
        android:id="@+id/ll_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_heading"
        android:layout_marginTop="@dimen/d_margin_15"
        android:gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>

    <TextView
        android:id="@+id/tv_recent_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/ll_category"
        android:background="@color/c_white"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Recent Searches"
        android:textColor="@color/c_black"
        android:textSize="@dimen/s_text_15"
        android:textStyle="bold"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No Data Available"
        android:textColor="@color/c_black"
        android:textSize="@dimen/s_text_15"
        android:visibility="gone" />

</RelativeLayout>