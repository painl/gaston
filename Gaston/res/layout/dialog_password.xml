<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/xml_dialog_white_curve_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:gravity="center"
        android:text="Please enter the password to open this interest"
        android:textColor="@color/c_4c4c4c"
        android:textSize="@dimen/s_text_15" />

    <LinearLayout
        android:id="@+id/ll_pswd_protected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible" >

        <EditText
            android:id="@+id/et_password_protected_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/xml_password_protected_box"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@color/c_4c4c4c"
            android:textSize="@dimen/s_text_20" />

        <EditText
            android:id="@+id/et_password_protected_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/xml_password_protected_box"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@color/c_4c4c4c"
            android:textSize="@dimen/s_text_20" />

        <EditText
            android:id="@+id/et_password_protected_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/xml_password_protected_box"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@color/c_4c4c4c"
            android:textSize="@dimen/s_text_20" />

        <EditText
            android:id="@+id/et_password_protected_4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/xml_password_protected_box"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@color/c_4c4c4c"
            android:textSize="@dimen/s_text_20" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/xml_button_left"
        android:padding="10dp"
        android:text="@string/text_ok"
        android:textColor="@color/c_white"
        android:textSize="@dimen/s_text_15"
        android:textStyle="bold" />

</LinearLayout>